<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://e1.pxfuel.com/desktop-wallpaper/202/900/desktop-wallpaper-best-50-movie-hq-film-aesthetic.jpg);">
  <div class="container">
    <h1>My Movie Watch Lists</h1>
  </div>
</div>

<div class="container" id="homepage-lists">
  <div class="lists">
    <h2>My Lists</h2>
    <div class="cards">
      <% @lists.each do |list| %>
        <div class="a-card">
          <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="new-form">
      <h3>Add a list</h3>
      <%= simple_form_for(@list) do |f| %>
        <%= f.input :name %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>

